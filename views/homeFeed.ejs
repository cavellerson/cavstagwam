<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <% for (let post of posts) { %>
            <a href="/posts/<%=post.username%>"><%=post.username%></a>
            <br>
            <a href="/posts/<%=post.username%>"/<%=post.post_id%>><img src="<%=post.image%>" alt="<%=post.image%>">
            </a>

            <br>
            <%=post.description%>
            <br>
        <% } %>
    </body>
</html>
