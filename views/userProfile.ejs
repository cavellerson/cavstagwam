<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

        <link rel="stylesheet" href="/styles.css">
    </head>

    <body>
        <%- include ('./partials/header.ejs') %>

        <% for (let post of allPosts) { %>
            <% if (username === currentUser) { %>
                <a href="/posts/<%=currentUser%>/<%=post.post_id%>/edit">Edit me</a>

            <% } %>



            <img src="<%=post.image%>" alt="<%=post.image%>">
            <br>
            <%=post.description%>

        <% } %>


        <% if (whichButtonToRender === 2) { %>

        <% } else if (whichButtonToRender === 1) { %>
            <form action="/unfollow/<%=username%>?_method=DELETE" method="POST">
                <input type="Submit" name="" value="Unfollow">
            </form>
        <% } else if (whichButtonToRender === 0) { %>
            <form action="/follow/action/<%=username%>" method="POST"
            >
                <input type="Submit" name="" value="Follow">
            </form>
        <% } %>







    </body>
</html>
