{
  "author": "Kai Mallea <kmallea@gmail.com>",
  "name": "imgur",
  "description": "Upload images to imgur.com",
  "version": "2.0.0-next.6",
  "homepage": "https://github.com/kaimallea/node-imgur",
  "license": "MIT",
  "keywords": [
    "imgur",
    "upload",
    "images"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/kaimallea/node-imgur.git"
  },
  "dependencies": {
    "form-data": "^4.0.0",
    "got": "^11.8.1"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --ci --coverage --runInBand",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prepare": "husky install",
    "lint": "eslint . && prettier --check . && npm run typecheck",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.22",
    "@types/mock-fs": "^4.13.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mock-fs": "^4.13.0",
    "msw": "^0.28.1",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint . --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{js,css,md,yml,yaml,json}": "prettier --write"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
